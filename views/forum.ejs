<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RnDiscussion - Forum</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="#" style="font-weight: bold;">RnDiscussion</a>
          <!-- <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Logout</button> -->
          <% if (userId) { %>
            <form action="/logout" method="POST">
              <button type="submit" class="btn btn-outline-danger my-2 my-sm-0">Logout</button>
            </form>
          <% } %>
          <% if (userId == null) { %>
            <div class="align-items-right d-flex gap-3">
              <a href="/login" class="btn btn-primary mb-3">Login</a>
              <a href="/register" class="btn btn-outline-secondary mb-3">Register</a>
            </div>
          <% } %>
        </div>
    </nav>
    
    <div class="container mt-5">
      <h2>Forum</h2>
      <% if (userId) { %>
      <a href="/createTopik" class="btn btn-primary mb-3">Create Topik</a>
      <% } %>
  
      <% for (const topic of topics) { %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><a href="/discussion/<%= topic.id %>"><%= topic.title %></a></h5>
            <p class="card-text"><%= topic.content %></p>
            <small class="text-muted">Created by <%= topic.user.username %> on <%= topic.createdAt.toDateString() %></small>
          </div>
        </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>